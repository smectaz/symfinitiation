{% extends 'base.html.twig' %}

{% block title %}This is home
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

		{% if article is not null %}

			{% if prenom is not null %}
				<h1>bonjour
					{{prenom}}
					✅</h1>
			{% endif %}
			This friendly message is coming from home.

			<p>{{ article.content }}</p>
		{% else %}
			<p>l'article demandé n'est pas disponible</p>
		{% endif %}


	</div>
{% endblock %}
